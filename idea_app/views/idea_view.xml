<?xml version="1.0"?>
<odoo>
	<record id="view_form_todo_task" model="ir.ui.view">
		<field name="name">Idea Form</field>
		<field name="model">idea.task</field>
		<field name="arch" type="xml">
			<form>
				<header>
					<button name="do_toggle_done" type="object"
						string="Approve" class="oe_highlight" />
					<button name="do_clear_done" type="object"
						string="Decline" />
				</header>
				<sheet>
					<group name="group_top">
						<group name="group_left">
							<field name="name"/>
							<field name="employee"/>
							<field name="created"/>
							<field name="company"/>
						</group>
						<group name="group_right">
							<field name="departement"/>
							<field name="deadline"/>
							<field name="idea_type"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
</odoo>