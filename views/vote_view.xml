<odoo>
	<record id="view_form_vote_app" model="ir.ui.view">
		<field name="name">Idea Vote Form</field>
		<field name="model">vote.app</field>
		<field name="arch" type="xml">
			<form string="Ideas">
				<header>
				<!-- Button go here -->
				<button name="do_post_idea" type="object" string="Post Idea for Voting" class="btn-primary" states="new"/>
				<button name="do_approve" type="object" string="Approve" class="btn-primary" states="waiting"/>
				<button name="do_reject" type="object" string="Reject" class="btn-primary" states="waiting"/>
				<button name="do_give_vote" type="object" string="Give Vote" class="btn-primary" states="approved"/>
				<button name="do_closed" type="object" string="Close" class="btn-primary" states="approved"/>
				<field name="state" widget="statusbar" statusbar_visible="new,waiting,approved,closed" on_change="1" modifiers="{'readonly': true}"/>
				</header>
				<sheet>
				<!-- Content goes here: -->
				<div class="oe_title">
					<group name="group_top">
						
							<label for="name" string="Title"/>
							<h1>
								<field name="name"/>
							</h1>
						
					</group>
				</div>
				<group name="group_bottom">
					<group name="group_left">
							<field name="employee_ids"/>
							<field name="date_create"/>
							<field name="company_id"/>
					</group>
					<group nama="group_right">
						<field name="department_id"/>
						<field name="date_deadline"/>
						<field name="idea_id"/>
					</group>
				</group>
				<notebook>
					<page string="Details">
						<field name="description"/>
					</page>
					<page string="Employee Votes">
						
					</page>
				</notebook>
				</sheet>
				<div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
			</form>
		</field>
	</record>
	<record id="view_tree_vote_app" model="ir.ui.view">
		<field name="name">Idea Vote Tree</field>
		<field name="model">vote.app</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
				<field name="idea_id"/>
				<field name="date_create"/>
				<field name="date_deadline"/>
			</tree>
		</field>
	</record>
</odoo>